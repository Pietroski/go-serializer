{
  "kind": "pipeline",
  "name": "go-serializer-pipeline",
  "steps": [
    {
      "commands": [
        "apk update && apk upgrade && apk add git bash make build-base",
        "echo -e \"machine gitlab.com\nlogin $${GITLAB_USERNAME}\npassword $${GITLAB_ACCESS_TOKEN}\" > ~/.netrc",
        "chmod 640 ~/.netrc",
        "go env -w GONOSUMDB=gitlab.com/pietroski-software-company",
        "go env -w GONOPROXY=gitlab.com/pietroski-software-company",
        "go env -w GOPRIVATE=gitlab.com/pietroski-software-company",
        "go test -race --tags=unit -cover ./..."
      ],
      "environment": {
        "GITLAB_ACCESS_TOKEN": {
          "from_secret": "GITLAB_ACCESS_TOKEN"
        },
        "GITLAB_USERNAME": {
          "from_secret": "GITLAB_USERNAME"
        }
      },
      "image": "golang:1.23.0-alpine3.20",
      "name": "test-non-main",
      "when": {
        "branch": {
          "exclude": [
            "main"
          ]
        },
        "event": [
          "push"
        ]
      }
    },
    {
      "commands": [
        "apk update && apk upgrade && apk add git bash make build-base",
        "echo -e \"machine gitlab.com\nlogin $${GITLAB_USERNAME}\npassword $${GITLAB_ACCESS_TOKEN}\" > ~/.netrc",
        "chmod 640 ~/.netrc",
        "go env -w GONOSUMDB=gitlab.com/pietroski-software-company",
        "go env -w GONOPROXY=gitlab.com/pietroski-software-company",
        "go env -w GOPRIVATE=gitlab.com/pietroski-software-company",
        "go test -race --tags=unit -cover ./..."
      ],
      "environment": {
        "GITLAB_ACCESS_TOKEN": {
          "from_secret": "GITLAB_ACCESS_TOKEN"
        },
        "GITLAB_USERNAME": {
          "from_secret": "GITLAB_USERNAME"
        }
      },
      "image": "golang:1.23.0-alpine3.20",
      "name": "test-main",
      "when": {
        "branch": [
          "main"
        ],
        "event": [
          "push"
        ]
      }
    },
    {
      "commands": [
        "apk update && apk upgrade && apk add git bash make build-base",
        "echo -e \"machine gitlab.com\nlogin $${GITLAB_USERNAME}\npassword $${GITLAB_ACCESS_TOKEN}\" > ~/.netrc",
        "chmod 640 ~/.netrc",
        "git checkout -b release/merging-branch",
        "git remote add gitlab https://gitlab.com/pietroski-software-company/devex/golang/serializer.git",
        "git push gitlab release/merging-branch -f"
      ],
      "environment": {
        "GITLAB_ACCESS_TOKEN": {
          "from_secret": "GITLAB_ACCESS_TOKEN"
        },
        "GITLAB_USERNAME": {
          "from_secret": "GITLAB_USERNAME"
        }
      },
      "image": "golang:1.23.0-alpine3.20",
      "name": "gitlab-push",
      "when": {
        "branch": [
          "main"
        ],
        "event": [
          "push"
        ]
      }
    },
    {
      "commands": [
        "apk update && apk upgrade && apk add git bash make build-base",
        "echo -e \"machine gitlab.com\nlogin $${GITLAB_USERNAME}\npassword $${GITLAB_ACCESS_TOKEN}\" > ~/.netrc",
        "chmod 640 ~/.netrc",
        "go env -w GONOSUMDB=gitlab.com/pietroski-software-company",
        "go env -w GONOPROXY=gitlab.com/pietroski-software-company",
        "go env -w GOPRIVATE=gitlab.com/pietroski-software-company",
        "go test -race --tags=unit -cover ./..."
      ],
      "environment": {
        "GITLAB_ACCESS_TOKEN": {
          "from_secret": "GITLAB_ACCESS_TOKEN"
        },
        "GITLAB_USERNAME": {
          "from_secret": "GITLAB_USERNAME"
        }
      },
      "image": "golang:1.23.0-alpine3.20",
      "name": "test-tag",
      "when": {
        "branch": [
          "*"
        ],
        "event": [
          "tag"
        ]
      }
    },
    {
      "commands": [
        "apk update && apk upgrade && apk add git bash make build-base",
        "echo -e \"machine gitlab.com\nlogin $${GITLAB_USERNAME}\npassword $${GITLAB_ACCESS_TOKEN}\" > ~/.netrc",
        "chmod 640 ~/.netrc",
        "git remote add gitlab https://gitlab.com/pietroski-software-company/devex/golang/serializer.git",
        "make tag",
        "git push gitlab --tags"
      ],
      "environment": {
        "GITLAB_ACCESS_TOKEN": {
          "from_secret": "GITLAB_ACCESS_TOKEN"
        },
        "GITLAB_USERNAME": {
          "from_secret": "GITLAB_USERNAME"
        }
      },
      "image": "golang:1.23.0-alpine3.20",
      "name": "gitlab-tag",
      "when": {
        "branch": [
          "*"
        ],
        "event": [
          "tag"
        ]
      }
    }
  ]
}
